@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container-md">
    <img src="images/bwholesale_bg.jpg" alt="Image Data" class="bg_image" />
</div>
<div class="container-lg">
    <h1 class="display-4">Contact Us</h1>
    <p>Call: 662-610-5212</br>Pontotoc, Ms 38863</p>
</div>
<div class="container-lg">
    @for (int i = 0; i < Model.FurniturePrices.Count; i++)
    {
        var val = Model.FurniturePrices[i];
        <div class="row">
            <div class="col-sm" onclick="handleClick(@val.FurnitureGroupId)">
                @val.FurnitureGroupPrice<br />
                @(val.FurnitureGroupIsDelivered ? "Set Delivered" : "")
            </div>
        </div>
    }
</div>

<script>
    function handleClick(priceGroup)
    {
        window.location.href = `/Catalog?furnitureType=${encodeURIComponent(priceGroup)}`;
    }
</script>

<style>
    .container-md, .container-lg
    {
        text-align: center;
    }
    .col-sm
    {
        text-align: center;
        border-style: solid;
        border-color: lightblue;
        border-width: 2px;
        border-radius: 8px;
        padding: 1rem;
        margin: 0.5rem;
    }
    .col-sm:hover
    {
        background-color: lightblue;
    }
    .submitBtn
    {
        border-radius: 8px;
        border-color: lightblue;
    }
</style>
